<div class="container">
     
    <div class="row justify-content-center ">
    
        <div class="col-10">
        <%= render 'shared/errors', obj: @article %>
            <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                
                <div class="form-group row mt-2">
                    <%= f.label :title, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title here" %>
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <%= f.label :description, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description here" %>
                    </div>
                </div>
                
                <div class="form-group row justify-content-center mt-2 mb-2">
                    <div class="col-2">
                        <%= f.submit class: "btn btn-outline-light btn-lg" %>
                    </div>
                </div>      
            <% end %>
            
        </div>
        <div class="mb-3">
            <center> <%= link_to '[ Cancel & Go back to list ]', articles_path, class: "text-info"%><center>
        </div>
        </div>
</div>