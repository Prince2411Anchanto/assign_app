<h1 class="text-center mt-4"><%= @article.title%></h1>
<div class="container">
<div class="row justify-content-md-center mt-4 ">
    <div class="col-8">
        <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header">
                <p id="author">by <%= link_to @article.user.username, user_path(@article.user) %></p>
                <div class="mt-2">
                <% if @article.categories.any? %>
                    <%= render @article.categories %>
                <%end%>
                </div>
            </div>
            <div class="card-body">
                <div class="text-start">
                    <%= simple_format(@article.description) %>
                    
                </div>
                <%if logged_in? && (@article.user == current_user || current_user.admin?)%>
                <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-info" %>
                
                <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
                <%end%>
            </div>
            <div class="card-footer text-muted">
                <small> Created <%= time_ago_in_words(@article.created_at)%> ago, Updated
                <%=time_ago_in_words(@article.updated_at) %> ago </small>
            </div>
        </div>  
    </div>
</div>

