<h1 class="text-center mt-4">Category list</h1>
<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>
<div class="container">
<% @categories.each do |category| %>
    <div class="row justify-content-md-center mt-4">
        <div class="col-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header">
                    <%=link_to category.name, category_path(category), class: "text-success fst-italic nodeco" %>
                </div>
                <div class="card-body">

                </div>
                <div class="card-footer text-muted">
                <small>Created <%= time_ago_in_words(category.created_at)%> ago</small>
                </div>
            </div>  
        </div>
    </div>
<% end %>
</div>  

<div class="flickr_pagination mb-4">
    <%= will_paginate @categories, :container => false %>
</div>